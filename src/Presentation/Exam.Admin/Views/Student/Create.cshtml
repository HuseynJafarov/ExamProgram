@using Exam.Admin.Models.Student
@model StudentCreate

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Student</title>
    <link rel="icon" href="./img/Prosys.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-light text-center p-3">
        <h1 class="header-title">Add New Student</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Student")">Students</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Exam")">Exams</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Lesson")">Lessons</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="StudentNumber">Student Number</label>
                <input type="number" step="0.01" class="form-control" id="StudentNumber" name="StudentNumber" required />
            </div>
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" required />
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" id="LastName" name="LastName" required />
            </div>
            <div class="form-group">
                <label for="Class">Class</label>
                <input type="number" step="0.01" class="form-control" id="Class" name="Class" required />
            </div>
            <button type="submit" class="btn btn-success">Add Student</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <span class="text-muted">© 2024 Admin Panel by Hüseyn Jafarov. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
